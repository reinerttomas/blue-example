{% extends 'base.html.twig' %}

{% block title %}Contacts | {{ parent() }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="mt-5">
            <div class="d-flex align-items-center justify-content-between mb-4">
                <h1>Contacts</h1>
                <a class="btn btn-primary" href="{{ url('app_contact_create') }}">Create</a>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Surname</th>
                        <th scope="col">Email</th>
                        <th scope="col">Username</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Created At</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for contact in contacts %}
                        <tr>
                            <td>{{ contact.id }}</td>
                            <td>{{ contact.name }}</td>
                            <td>{{ contact.surname }}</td>
                            <td>{{ contact.email }}</td>
                            <td>{{ contact.username }}</td>
                            <td>{{ contact.phone }}</td>
                            <td>{{ contact.createdAt|date('d.m.Y H:i') }}</td>
                            <td>
                                <a href="{{ url('app_contact_edit', { username: contact.username }) }}">Edit</a>
                                <a href="{{ url('app_contact_delete', { id: contact.id }) }}">Delete</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}